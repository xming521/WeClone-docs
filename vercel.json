{
    "redirects": [
        {
            "source": "/",
            "has": [
                {
                    "type": "header",
                    "key": "accept-language",
                    "value": "(?=.*zh).*"
                }
            ],
            "destination": "/zh/",
            "permanent": false
        },
        {
            "source": "/",
            "destination": "/en/",
            "permanent": false
        },
        {
            "source": "/((?!zh|en).*)",
            "has": [
                {
                    "type": "header",
                    "key": "accept-language",
                    "value": "(?=.*zh).*"
                }
            ],
            "destination": "/zh/$1",
            "permanent": false
        },
        {
            "source": "/((?!zh|en).*)",
            "destination": "/en/$1",
            "permanent": false
        }
    ],
    "rewrites": [
        {
            "source": "/zh/(.*)",
            "destination": "/zh/$1"
        },
        {
            "source": "/en/(.*)",
            "destination": "/en/$1"
        }
    ]
}